<script>
function payment() {

  var credits=document.getElementById('credits').value;
  var input = document.getElementById('input').value;
  var results = credits-input;
  document.getElementById('results').innerHTML = results;
}
function guardar(){
    window.open('https://www.tumblr.com/blog/creditpayment/new/text');
}
</script>

<b>credits:</b> <input type="text" id="credits" value="0">
<b>payment:</b> <input type="text" id="input" value="0">
<input type=button value="pay" onClick="payment()">
<input type=button value="archive" onClick="guardar()"><br>
<b>credits left:</b> <span id="results">(click "pay")</span><br>
